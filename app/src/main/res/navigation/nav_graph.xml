<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/listaJuegosFragment">


    <fragment
            android:id="@+id/listaCanchasFragment"
            android:name="io.github.n0g4y0.deporapp.ui.cancha.ListaCanchasFragment"
            android:label="canchas"
            tools:layout="@layout/fragment_lista_canchas" >
        <action
                android:id="@+id/action_listaCancha_hacia_crearCancha"
                app:destination="@id/crearCanchaFragment" />
    </fragment>
    <fragment
            android:id="@+id/anuncioFragment"
            android:name="io.github.n0g4y0.deporapp.ui.anuncio.AnuncioFragment"
            android:label="Anuncios" />
    <fragment
            android:id="@+id/mapaFragment"
            android:name="io.github.n0g4y0.deporapp.ui.mapa.MapaFragment"
            android:label="Mapa" />
    <fragment
            android:id="@+id/crearCanchaFragment"
            android:name="io.github.n0g4y0.deporapp.ui.cancha.CrearCanchaFragment"
            android:label="Crear Cancha" >
        <action
                android:id="@+id/action_crearCanchaFragment_to_enviarUbicacionFragment"
                app:destination="@id/enviarUbicacionFragment" />
    </fragment>
    <include app:graph="@navigation/info_graph" />
    <dialog
            android:id="@+id/enviarUbicacionFragment"
            android:name="io.github.n0g4y0.deporapp.ui.mapa.EnviarUbicacionFragment"
            android:label="Enviar Ubicacion"
            tools:layout="@layout/fragment_enviar_ubicacion" />
    <fragment
            android:id="@+id/listaEquipoFragment"
            android:name="io.github.n0g4y0.deporapp.ui.equipo.ListaEquiposFragment"
            android:label="Lista de Equipos"
            tools:layout="@layout/fragment_lista_equipos" >
        <action
                android:id="@+id/action_listaEquipoFragment_to_crearEquipoFragment"
                app:destination="@id/crearEquipoFragment" />
    </fragment>
    <fragment
            android:id="@+id/crearEquipoFragment"
            android:name="io.github.n0g4y0.deporapp.ui.equipo.CrearEquipoFragment"
            android:label="Crear Equipo" />
    <fragment
            android:id="@+id/listaJuegosFragment"
            android:name="io.github.n0g4y0.deporapp.ui.encuentro.ListaJuegosFragment"
            android:label="Lista Encuentros"
            tools:layout="@layout/fragment_lista_juegos" >
        <action
                android:id="@+id/action_listaJuegosFragment_to_crearJuegoFragment"
                app:destination="@id/crearJuegoFragment" />
    </fragment>
    <fragment
            android:id="@+id/crearJuegoFragment"
            android:name="io.github.n0g4y0.deporapp.ui.encuentro.CrearJuegoFragment"
            android:label="Crear Encuentro" />
    <dialog
            android:id="@+id/datePickerFragment"
            android:name="io.github.n0g4y0.deporapp.util.DatePickerFragment"
            android:label="Fecha" />
    <dialog
            android:id="@+id/timePickerFragment"
            android:name="io.github.n0g4y0.deporapp.util.TimePickerFragment"
            android:label="Hora" />
    <fragment
            android:id="@+id/seleccionCanchaFragment"
            android:name="io.github.n0g4y0.deporapp.ui.cancha.SeleccionCanchaFragment"
            android:label="Seleccionar Cancha"
            tools:layout="@layout/fragment_seleccion_cancha" >
        <action
                android:id="@+id/action_seleccionCancha_a_crearJuego"
                app:destination="@id/crearJuegoFragment" />
    </fragment>
    <fragment
            android:id="@+id/encuentrosViewPagerFragment"
            android:name="io.github.n0g4y0.deporapp.ui.encuentro.EncuentrosViewPagerFragment"
            android:label="Mis Encuentros"
            tools:layout="@layout/fragment_encuentros_view_pager" />

</navigation>