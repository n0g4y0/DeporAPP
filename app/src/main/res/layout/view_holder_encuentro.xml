<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

        <TextView
                android:id="@+id/tv_nombre_encuentro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Titulo" />


        <TextView
                android:id="@+id/tv_ubicacion_encuentro"
                android:layout_width="135dp"
                android:layout_height="71dp"
                android:gravity="right"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="2019-08-01\n11:30 AM" />

        <TextView
                android:id="@+id/tv_hora_encuentro"
                android:layout_width="80dp"
                android:layout_height="66dp"
                android:gravity="right"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_fecha_equipo"
                app:layout_constraintStart_toEndOf="@+id/tv_fecha_encuentro"
                tools:text=" 11:30 PM " />

        <TextView
                android:id="@+id/tv_fecha_encuentro"
                android:layout_width="80dp"
                android:layout_height="66dp"
                android:gravity="right"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="8 de julio \n Martes " />

        <ImageButton
                android:id="@+id/ib_unirse_encuento"
                android:layout_width="115dp"
                android:layout_height="39dp"
                android:layout_marginEnd="132dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombre_encuentro"
                app:srcCompat="@drawable/ic_action_add_game" />

        <ImageView
                android:id="@+id/ib_foto_perfil_creador_encuentro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombre_encuentro"
                app:srcCompat="@mipmap/equipo_default_picture" />

        <TextView
                android:id="@+id/cupos_encuentro"
                android:layout_width="73dp"
                android:layout_height="59dp"
                android:layout_marginTop="13dp"
                android:text="Le Faltan \n 13"
                android:textStyle="italic|bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_fecha_equipo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombre_encuentro" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>