<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.cancha.DetalleCanchaFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/nombre_Cancha_detalle"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_medium"
                    android:text="nombre cancha"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/imagen_url_cancha_detalle"
                    android:layout_width="match_parent"
                    android:layout_height="183dp"
                    android:layout_margin="0dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="300dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/default_photo" />
            <TextView
                    android:textSize="@dimen/margin_medium"
                    android:textStyle="bold|normal"
                    android:text="Encuentros Deportivos:"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_detalle_cancha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>


</FrameLayout>